<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!--  Full Screen Transparent Dialog  -->
    <style name="FullScreenTransparentDialog" parent="Theme.AppCompat.Light.DialogWhenLarge">

        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <!-- No backgrounds, titles or window float -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/DialogFadeAnimations</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="DialogFadeAnimations">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="mystreyin_textview_smallsize" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="fontFamily">@font/en_normal_regular</item>
        <item name="android:gravity">center|start</item>
        <item name="android:padding">0dp</item>
        <item name="android:textColor">@color/text_color</item>
    </style>
</resources>